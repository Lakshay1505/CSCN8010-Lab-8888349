#Data types in python: str,int,float,boolean
number = 10
number = number +0.01
# str(variable) --> typecasting variable as a string
# int(variable), float(variable)
number = str(number) + 'a'
print( type(number), number)
boolean_variable = False # True
print(boolean_variable, type(boolean_variable))

# string and formatted string
number_2 = 10
string_x = "Hello this number is equal to: "+str(number_2)
formated_string_x = f"Hello this number 2 is equal to: {number_2}"
print(string_x, formated_string_x)
_ = 5
print(_)# underscore is the only function whch can define.
